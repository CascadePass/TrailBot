<Application x:Class="CascadePass.TrailBot.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CascadePass.TrailBot.UI"
             xmlns:system="clr-namespace:System;assembly=mscorlib">
    
    <Application.Resources>
        <BooleanToVisibilityConverter x:Key="bool2vis" />
        <local:ReverseBooleanToVisibilityConverter x:Key="reverseBool2vis" />
        <local:ReverseBooleanToBooleanConverter x:Key="bool2ReverseBool" />

        <system:Double x:Key="Font.Small">10</system:Double>
        <system:Double x:Key="Font.Normal">12</system:Double>
        <system:Double x:Key="Font.Large">14</system:Double>
        <system:Double x:Key="Font.Larger">16</system:Double>
        <system:Double x:Key="Font.Huge">20</system:Double>
        <system:Double x:Key="Font.Huger">24</system:Double>

        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="{DynamicResource Font.Larger}" />
        </Style>

    </Application.Resources>
</Application>
