<RibbonWindow x:Class="CascadePass.TrailBot.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CascadePass.TrailBot.UI"
        mc:Ignorable="d"
        FontSize="{DynamicResource Font.Normal}"
        Title="TrailBot" Height="450" Width="800">

    <DockPanel>
        <local:RibbonStrip DockPanel.Dock="Top" />
        <local:StatusStrip DockPanel.Dock="Bottom" />

        <ContentPresenter x:Name="MainContent" />
    </DockPanel>

</RibbonWindow>
